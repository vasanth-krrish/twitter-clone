
<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">
        <h2 class="title is-2">Forgot your Password?</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <%= f.error_notification %>
            <div class="field">
              <div class="control">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { class: "input" },
                            wrapper: false,
                            label_html: {class: "label"}%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.button :submit, "Send me reset password instructions", class: "button is-info is-medium" %>
              </div>
            </div>

        <% end %>
        <br />
        Already have an account, <%= link_to 'Login', '/users/sign_in' %><br>
        Don't have an account, &nbsp;&nbsp;&nbsp; <%= link_to 'Sign up', '/users/sign_up' %>
      </div>

    </div>
  </div>
</div>
