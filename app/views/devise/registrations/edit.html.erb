<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <figure class="media-left">

              <% if current_user.avatar_shot!='' && Uploadable.count == 0 %>
                <p class="image is-128x128">
                  <image src="<%= current_user.avatar_shot %>" alt="">
                </p>
                <br>
              <% elsif current_user.avatar.attached? %>
                <p class="image is-128x128">
                  <image src="<%= url_for(current_user.avatar) %>">
                </p>
              <br>
              <% end %>

          </figure>
            <div class="field">
              <div class="control">
                <%= f.input :name,
                            required: true,
                            autofocus: true,
                            input_html: { class: "input" },
                            wrapper: false,
                            label_html: {class: "label"}%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :username,
                            required: true,
                            autofocus: true,
                            input_html: { class: "input" },
                            wrapper: false,
                            label_html: {class: "label"}%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :bio,
                            input_html: { class: "input" },
                            wrapper: false,
                            label_html: {class: "label"},
                            maxlength: 120 %>
              </div>
            </div>

            <% if Uploadable.count > 0 %>
              <div class="field">
                <div class="control">
                  <%= f.input :avatar,
                              label: "Profile Picture",
                              autofocus: true,
                              input_html: { class: "input" },
                              wrapper: false,
                              label_html: {class: "label"}%>
                </div>
              </div>
            <% else %>
              <div class="field">
                <div class="control">
                  <%= f.input :avatar_shot,
                              label: 'Profile Picture - Drop url here',
                              hint: 'Since Heroku filesystem is ephemeral, images get deleted once the session ends. Drop the url of image stored in web here.',
                              input_html: { class: "input" },
                              wrapper: false,
                              label_html: {class: "label"}%>
                </div>
              </div>
            <% end %>

            <div class="field">
              <div class="control">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { class: "input" },
                            wrapper: false,
                            label_html: {class: "label"}%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password,
                            hint: ("leave blank if you don't want to change it"),
                            input_html: { class: "input" },
                            wrapper: false,
                            label_html: {class: "label"} %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password_confirmation,
                            input_html: { class: "input" },
                            wrapper: false,
                            label_html: {class: "label"} %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :current_password,
                            hint: ("we need your current password to confirm your changes"),
                            required: true,
                            input_html: { class: "input" },
                            wrapper: false,
                            label_html: {class: "label"} %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.button :submit, "Update", class: "button is-info is-medium" %>
              </div>
            </div>

        <% end %>
        <hr />
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>

    </div>
  </div>
</div>




