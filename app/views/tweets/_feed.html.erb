<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <% if current_user.avatar.attached? %>
            <image src="<%= url_for(current_user.avatar) %>">
          <% else %>
            <img src="https://bulma.io/images/placeholders/64x64.png">
          <% end %>
        </p>
      </figure>
      <div class="media-content">
        <%= render 'tweets/form' %>
      </div>
    </article>
  <% end %>

<% @tweets.each do |tweet| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="media-left">
          <p class="image is-64x64">
            <% if tweet.user.avatar.attached? %>
              <image src="<%= url_for(tweet.user.avatar) %>">
            <% else %>
              <img src="https://bulma.io/images/placeholders/64x64.png">
            <% end %>
          </p>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <a href="<%= profile_path(tweet.user.username) %>"><strong><%= tweet.user.name %></strong><br/></a>
          <small><%= tweet.user.username %></small><br/>
          <p><%= tweet.tweet %></p>
        </div>
        <% if user_signed_in? %>
          <% if current_user.id == tweet.user_id %>
          <nav class="level">
            <div class="field is-grouped">
              <div class="level-left is-mobile">
                <%= link_to tweet, class: 'level-item' do %>
                  <span class="icon">
                    <i class="fa fa-link" aria-hidden='true'></i>
                  </span>
                <% end %>
                <%= link_to edit_tweet_path(tweet), class: 'level-item' do %>
                  <span class="icon">
                    <i class="fa fa-pencil" aria-hidden='true'></i>
                  </span>
                <% end %>
                <%= link_to tweet, class: 'level-item', method: :delete, data: {confirm: "Are you sure you want to delete this tweet"} do %>
                  <span class="icon">
                    <i class="fa fa-trash" aria-hidden='true'></i>
                  </span>
                <% end %>
              </div>
            </div>
          </nav>
          <% end %>
        <% end %>
      </div>
    </article>
  </div>
<% end %>
</div>
