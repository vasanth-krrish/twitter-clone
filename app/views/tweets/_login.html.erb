<div class="column is-9">
  <div class="box">
    <h2 class="title is-2">Log In</h2>
    <%= simple_form_for(resource, url: new_user_session_path(resource)) do |f| %>
      <%= f.error_notification %>

        <div class="field">
          <div class="control">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { class: "input" },
                        wrapper: false,
                        label_html: {class: "label"}%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { class: "input" },
                        wrapper: false,
                        label_html: {class: "label"} %>
          </div>
        </div>
        <div class="field">
          <div class="control">
                    <%= f.check_box :remember_me,
                                    input_html: { class: "input" },
                                    wrapper: false,
                                    label_html: {class: "label"},
                                    hint: ("remember me")%>
            Remember me
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit, "Sign in", class: "button is-info is-medium" %>
          </div>
        </div>

    <% end %>
    <br />
    Don't have an account,
    <%= link_to 'Sign up', '/users/sign_up' %> instead<br>
    <%= link_to 'Forgot your password?', '/users/password/new' %>
  </div>
</div>
